   <script>
  // Parse the users passed from EJS
  const tabledata = <%- JSON.stringify(categories) %>;

  // Initialize Tabulator
  const table = new Tabulator("#categoriesTable", {
    data: tabledata,
    layout: "fitColumns",
    pagination: true,
    paginationSize: 10,
    paginationSizeSelector: [5, 10, 25, 50, 100],

    // Use your Mongo _id as the Tabulator row ID
   index: "_id",


    columns: [
      { title: "S.No", formatter: "rownum", width: 100, hozAlign: "center" },
      { title: "Category Name", field: "name", headerFilter: "input" },
      { title: "Slugname", field: "slug", headerFilter: "input" },
      {
        title: "Action",


        formatter: function (cell) {
          const id = cell.getData()._id;
          return `
            <a href="/admin/update-category/${id}" class="btn btn-sm btn-secondary me-1">
              <i class="fa fa-edit"></i> Edit
            </a>
            <button class="btn btn-sm btn-danger delete-category" onclick="deleteCategory('${id}')">
              <i class="fa fa-trash"></i> Delete
            </button>
          `;
        },
      },
    ],
  });

  // Delete User
async function deleteCategory(id){
  if (confirm("Are you sure you want to delete this Category?")) {
      fetch(`/admin/delete-category/${id}`, {
        method: "DELETE",
      })
        .then((res) => {
          if (res.ok) {
            return res.json();
           
          } else {
            throw new Error("Failed to delete Category");
          }
        })
        .then((data) => {
          alert("Category deleted successfully");
          table.deleteRow(id); // Refresh Tabulator data if needed
           window.location.reload();
        })
        .catch((err) => {
          alert(err.message);
          
        });
    }
}
</script>
