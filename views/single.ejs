  <!-- post-container -->
                  <div class="post-container">
                    <div class="post-content single-post">
                      <h3><%= Singlenews.title %></h3>
                      <div class="post-information">
                        <span>
                          <i class="fa fa-tags" aria-hidden="true"></i>
                          <a href="/category/<%= Singlenews.category.slug %>">
                          <%= Singlenews.category.name %>
                          </a>
                        </span>
                        <span>
                          <i class="fa fa-user" aria-hidden="true"></i>
                          <a href='/author/<%= Singlenews.author._id %>'><%= Singlenews.author.fullname %></a>
                        </span>
                        <span>
                          <i class="fa fa-calendar" aria-hidden="true"></i>
                          <%= Singlenews.createdAt %>
                        </span>
                      </div>
                      <img class="single-feature-image" src="/uploads/<%= Singlenews.image %>" alt=""/>
                     <div class="">
                    <%- Singlenews.content.replace(/<p>/g, '').replace(/<\/p>/g, '\n\n').replace(/<br>/g, '\n') %>

                     </div>
                    </div>
                  </div>
                  <!-- /post-container -->

                  <!-- Comments Section -->
                  <div class="comments-section mt-5">
                    <h3>Comments</h3>
                    
                    <!-- Comment Form -->
                    <div class="card mb-4">
                        <div class="card-body">
                            <form action="/single/<%= Singlenews._id %>/comment" method="POST">
                                <div class="mb-3">
                                    <label class="form-label">Name</label>
                                    <input type="text" class="form-control" name="name" required>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Email</label>
                                    <input type="email" class="form-control" name="email" required>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Comment</label>
                                    <textarea class="form-control" name="content" rows="3" required></textarea>
                                </div>
                                <button type="submit" class="btn btn-primary">Submit Comment</button>
                            </form>
                        </div>
                    </div>

                    <!-- Display Comments -->
                    <div class="comments-list">
                      
                      <% comments.forEach(comment => { %>
                      <div class="card mb-3">
                        <div class="card-body">
                          <h6 class="card-subtitle mb-2 text-muted"><%= comment.name %></h6>
                          <p class="card-text"><%= comment.content %></p>
                          <small class="text-muted">Posted on <%= new Date(comment.createdAt).toLocaleString() %></small>
                        </div>
                      </div>
                      <% }); %>
                     
                    </div>
                </div>